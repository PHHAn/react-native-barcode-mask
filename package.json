    "@types/react": "16.9.48",
    "@types/react-native": "0.63.15",
    "commitizen": "4.2.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.13",
    "react": "16.13.1",
    "react-native": "0.63.2",
    "react-native-camera": "3.37.0",
    "react-native-reanimated": "1.13.0",
    "semantic-release": "17.1.1",
    "tsdx": "0.13.3",
    "tslib": "2.0.1",
    "typescript": "3.9.7"
  }
}
